<% cache card do %>

<div class="card mx-auto <%= color %> m-4 p-3 rounded shadow" 
     style="max-width: 60%; min-width: 300px; width: <%= width %>;">
    <h4 class="card-title">
        <%= title %>
    </h4>

    <div class="card-body">
        <%= card.question %>
    </div>

    <div class="d-flex">
        <%= yield %>
    </div>

    
    
</div>

<% end %>
